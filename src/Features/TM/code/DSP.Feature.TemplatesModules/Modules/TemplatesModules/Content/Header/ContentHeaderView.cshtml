@model DSP.Feature.TemplatesModules.Modules.TemplatesModules.Content.Header.ContentHeaderRendering

<header class="content-header">
    <h1>@Model.ViewModel.Title</h1>

    @if (Model.ViewModel.ContentTags.Any())
    {
        <div class="collection-item-tags">
            <strong>Tagged in:</strong>
            <ul>
                @foreach (var tag in Model.ViewModel.ContentTags)
                {
                    <li><a href="@tag.GetUrl(Model.ViewModel.SearchResultsUrl)">@tag.Title</a></li>
                }
            </ul>
        </div>
     }
</header>
