@model ContextRenderingModel<DSP.Feature.TemplatesModules.Modules.TemplatesModules.Content.LandingBanner.LandingBanner>

<header class="landing-banner @(Model.ViewModel.IsDark ? "is-dark" : string.Empty)">
    @using (Html.BeginEditFrame(Model.Item, "/sitecore/content/Applications/WebEdit/Edit Frame Buttons/DSP/Features/TemplatesModules/Landing Banner"))
    {
        <div class="l-padding">
            <div class="content">
                <h1>@Model.ViewModel.Title</h1>
                @Model.ViewModel.GeneralText
            </div>
            <div class="image" style="background-image: url(@Model.ViewModel.BannerImage.UrlOnly())">
                <span class="vh">Image: </span>
            </div>
        </div>
    }
</header>